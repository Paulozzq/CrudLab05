<Window x:Class="Crud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Productos}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProducto}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreProducto}" Width="200"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding PrecioUnidad}" Width="100"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding CategoriaProducto}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
