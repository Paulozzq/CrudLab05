<Window x:Class="CrudClientes.FormCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudClientes"
        mc:Ignorable="d"
        Title="FormCliente" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="ID Cliente"/>
            <TextBox x:Name="txtIdCliente" Margin="0 5"/>

            <TextBlock Text="Nombre Compañía"/>
            <TextBox x:Name="txtNombreCompañia" Margin="0 5"/>

            <TextBlock Text="Nombre Contacto"/>
            <TextBox x:Name="txtNombreContacto" Margin="0 5"/>

            <TextBlock Text="Cargo Contacto"/>
            <TextBox x:Name="txtCargoContacto" Margin="0 5"/>

            <TextBlock Text="Dirección"/>
            <TextBox x:Name="txtDireccion" Margin="0 5"/>

            <TextBlock Text="Ciudad"/>
            <TextBox x:Name="txtCiudad" Margin="0 5"/>

            <TextBlock Text="Región"/>
            <TextBox x:Name="txtRegion" Margin="0 5"/>

            <TextBlock Text="Código Postal"/>
            <TextBox x:Name="txtCodPostal" Margin="0 5"/>

            <TextBlock Text="País"/>
            <TextBox x:Name="txtPais" Margin="0 5"/>

            <TextBlock Text="Teléfono"/>
            <TextBox x:Name="txtTelefono" Margin="0 5"/>

            <TextBlock Text="Fax"/>
            <TextBox x:Name="txtFax" Margin="0 5"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Guardar" Width="80" Margin="0 0 10 0" Click="btnGuardar_Click"/>
            <Button Content="Cancelar" Width="80" Click="btnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
